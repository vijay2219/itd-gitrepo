pipeline {
    agent any 

    tools {
        maven 'maven-3.9.2'
    }

    stages {
        stage ('Build-Maven') {
            steps {
                sh '''
                    cd ./itd-gitrepo/maven/simple-war/
                    mvn clean package
                    cd ./itd-gitrepo/maven/simple-war/target/
                    ls
                '''
            }
        }

        stage ('Deploy-Tomcat') {
            steps {
                script {
                    deploy adapters: [tomcat9(credentialsId: 'my-tomcat-deploy', path: '', url: 'http://18.222.69.117:8080/')], 
                                     contextPath: '/itdefined-war-1.0.0', 
                                     war: 'maven/simple-war/target/itdefined-war-1.0.0.war'
                }
            }
        }
    }

}
